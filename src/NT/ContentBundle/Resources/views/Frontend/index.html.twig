{% extends '::base.html.twig' %}

{% block main %}
    {{ render(controller("NTSearchBundle:SearchFrontend:search")) }}

    {% set haveSidebar = false %}
    {% if sideBar is defined and sideBar is not null and sideBar|length %}
        {% set haveSidebar = true %}
    {% endif %}
    <div class="row">
        {% if haveSidebar %}
            <div class="col-lg-2">
                <nav>
                    {{ sideBar|raw }}
                </nav>
            </div>
        {% endif %}  
        <div class="col-lg-{% if haveSidebar %}10{% else %}12{% endif %}">
            {% if content.description is defined and content.description is not null and content.description|length %}
                {{ content.description|raw }}
            {% endif %}
        </div>

        {% include 'NTCompaniesBundle:Frontend:publish_box_bottom.html.twig' %}
    </div>
    <!-- /.row -->
{% endblock %}
