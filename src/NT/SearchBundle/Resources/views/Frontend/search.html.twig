<div id="searchRow" class="row" style="margin-top: 10px">
    <div class="col-lg-12">
        <h2 class="page-header">{{ 'search.title'|trans({}, 'NTFrontendBundle')}}</h2>
    </div>
    <div class="col-md-10 col-md-offset-1">
        <div class="form-section">
            <div class="row">
                <form method="GET" action="{{ path('search') }}">
                    <div class="col-md-7" style="padding-left: 0px">
                        <div class="form-group">
                            <label class="sr-only" for="q">
                                {{ 'search.label'|trans({}, 'NTFrontendBundle')}}
                            </label>
                            <input type="text" class="form-control" name="q" id="q" placeholder="{{ 'search.placeholder'|trans({}, 'NTFrontendBundle')}}">
                        </div>
                    </div>
                    <div class="col-md-4" style="padding-left: 0px">
                        <div class="form-group">
                            <label class="sr-only" for="location">
                                {{ 'search.city'|trans({}, 'NTFrontendBundle')}}
                            </label>
                            <select id="location" name="location" class="form-control">
                                <option value="0">
                                    {{ 'search.city_empty'|trans({}, 'NTFrontendBundle')}}
                                </option>
                                {% for location in locations %}
                                    <option  value="{{ location.id }}">
                                        {{ location.title }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-1" style="text-align: right">
                        <button type="submit" class="btn btn-default btn-primary">
                            {{ 'search.submit'|trans({}, 'NTFrontendBundle')}}
                        </button>
                    </div>
                </form>

                {% include 'NTCompaniesBundle:Frontend:publish_box_top.html.twig' %}
            </div>
        </div>
    </div>
</div>
<hr/>
