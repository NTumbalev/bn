{% extends '::base.html.twig' %}

{% block main %}
    {{ render(controller("NTSearchBundle:SearchFrontend:search")) }}
    
    <div class="row">
        <div class="col-lg-12">
            {% form_theme form with 'NTCompaniesBundle:Form:publish_company_form.html.twig' %}
            {{ 
                form_start(
                    form, 
                    { 
                        'attr': {
                            'novalidate': 'novalidate',
                            'id': 'publish_company_form'
                        }
                    }
                ) 
            }}

            <fieldset>

            <legend>{{ 'publish_company.form_title'|trans({}, 'NTFrontendBundle')}}</legend>
            
            <p>{{ 'publish_company.form_description'|trans({}, 'NTFrontendBundle')}}</p>

            {% if app.session.flashbag.get('success') %}
                <div class="alert alert-success fade in">
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    {{'publish_company.success'|trans({}, 'NTFrontendBundle')}}
                </div>
            {% endif %}

            {% if app.session.flashbag.get('error') %}
                <div class="alert alert-danger fade in"> 
                    <a class="close" data-dismiss="alert" href="#">×</a>
                    {{ 'publish_company.error'|trans({}, "NTFrontendBundle")}}
                </div>
            {% endif %}

            <div class="col-lg-6">
                <div class="form-group{% if form.title.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.title) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            {{form_widget(form.title) }}
                        </div>
                    </div>
                </div>

                <div class="form-group{% if form.phone.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.phone) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-earphone"></i>
                            </span>
                            {{form_widget(form.phone) }}
                        </div>
                    </div>
                </div>

                <div class="form-group{% if form.keywords.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.keywords) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-envelope"></i>
                            </span>
                            {{form_widget(form.keywords) }}
                        </div>
                    </div>
                </div>

                <div class="form-group{% if form.contactPerson.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.contactPerson) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-user"></i>
                            </span>
                            {{form_widget(form.contactPerson) }}
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- SECOND COLUMN -->
            <div class="col-lg-6">
                <div class="form-group{% if form.address.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.address) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-home"></i>
                            </span>
                            {{form_widget(form.address) }}
                        </div>
                    </div>
                </div>

                <div class="form-group{% if form.locations.vars.errors|length %} has-error{% endif %}"> 
                    {{ form_label(form.locations) }}
                    <div class="col-md-12 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-list"></i>
                            </span>
                            {{form_widget(form.locations) }}
                        </div>
                    </div>
                </div>

                <div class="form-group{% if form.webpage.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.webpage) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-home"></i>
                            </span>
                            {{form_widget(form.webpage) }}
                        </div>
                    </div>
                </div>
                <div class="form-group{% if form.email.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.email) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-envelope"></i>
                            </span>
                            {{form_widget(form.email) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="form-group{% if form.companyCategories.vars.errors|length %} has-error{% endif %}"> 
                    {{ form_label(form.companyCategories) }}
                    <div class="col-md-12 selectContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-list"></i>
                            </span>
                            {{form_widget(form.companyCategories) }}
                        </div>
                    </div>
                </div>

                <div class="form-group{% if form.message.vars.errors|length %} has-error{% endif %}">
                    {{ form_label(form.message) }}
                    <div class="col-md-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-pencil"></i>
                            </span>
                            {{form_widget(form.message) }}
                        </div>
                    </div>
                </div>
                
                <!-- Button -->
                <div class="form-group text-center">
                    <label class="col-md-12 control-label"></label>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success">
                            Изпрати <span class="glyphicon glyphicon-send"></span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Success message -->
            <!-- <div class="alert alert-success" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for contacting us, we will get back to you shortly.</div> -->

            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
