{% extends '::base.html.twig' %}

{% import "::paginatorWithRouteAndSlug.html.twig" as pager %}

{% block main %}
    {{ render(controller("NTSearchBundle:SearchFrontend:search")) }}
    
    <h1>{{ category.title }}</h1>
    
    <a href="{{ path('categories_list') }}">
        <span class="glyphicon glyphicon-arrow-left"></span> {{ 'catalogue.back_to_all_categories'|trans({}, 'NTFrontendBundle')}}
    </a>

    <div class="row">
        <!-- Companies -->
        <div class="col-lg-10">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>{{ 'catalogue.company_name'|trans({}, 'NTFrontendBundle')}}</th>
                            <th>
                                {% if locations is defined and locations is not null and locations|length %}
                                    <select id="locations">
                                        {% for location in locations %}
                                            <option value="{{ location.id }}">
                                                {{ location.title }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                {% endif %}
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for company in companies %}
                            <tr>
                                <td>
                                    {% if company.isTop %}
                                        <span class="yellow-star glyphicon glyphicon-star"></span>
                                    {% endif %}
                                    <a href="{{ path('company_view', {'categorySlug':category.slug, 'companySlug': company.slug}) }}">
                                        {{ company.title }} ({{ category.title }})
                                    </a>
                                </td>
                                <td>{{ company.location }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                {% if companies is defined and companies is not null and companies|length %}
                    {{ pager.pager(companies, "companies_list", category.slug, 'categorySlug') }}
                {% endif %}
            </div>
        </div>
        <!-- Banners -->
        <div class="col-lg-2 mediumBanner">
            {{ 
                render(controller('NTBannersBundle:BannersFrontend:renderBanners', {
                    'position': 'right',
                    'isMain': false,
                    'pageId': category.id
                })) 
            }}
        </div>

        {% include 'NTCompaniesBundle:Frontend:publish_box_bottom.html.twig' %}
    </div>
    <!-- /.row -->
{% endblock %}
