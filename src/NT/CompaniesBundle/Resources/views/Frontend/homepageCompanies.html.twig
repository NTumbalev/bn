{% if companies is defined and companies is not null and companies|length %}
    <div class="row">
        <div class="col-lg-12">
            <div>
                <p class="allCategories">
                    <a href="{{ path('categories_list') }}">
                        {{ 'catalogue.all_categories'|trans({}, 'NTFrontendBundle')}}
                    </a>
                </p>
                <h2 class="page-header">{{ 'catalogue.categories'|trans({}, 'NTFrontendBundle')}}</h2>
            </div>
            <div class="homepageCategories">
                {% for company in companies %}
                    <div class="categoryAccent col-md-3 col-sm-6">
                        <h3>
                            <a href="categoryListing.php">{{ company.title }}</a>
                        </h3>

                        {% if company.translations[app.request.locale].image is defined and company.translations[app.request.locale].image is not null and company.translations[app.request.locale].image|length %}
                            <a class="categoryImage" href="categoryListing.php">
                                <img class="img-responsive img-portfolio img-hover" src="{% path company.translations[app.request.locale].image, 'index' %}" alt="">
                            </a>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endif %}