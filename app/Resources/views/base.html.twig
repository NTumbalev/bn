<!DOCTYPE html>
<html lang="bg" {{ sonata_seo_html_attributes() }}>
    <head {{ sonata_seo_head_attributes() }}>
        {{ sonata_seo_title() }}
        {{ sonata_seo_metadatas() }}
        {{ sonata_seo_link_canonical() }}
        {{ sonata_seo_lang_alternates() }}

        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <meta name="viewport" content="width=device-width">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />

        {% block headerCSS %}{% endblock %}
        {% block headerJS %}{% endblock %}

        {{ render(controller('NTSettingsBundle:Settings:render', {'key':'header_miscellanous'})) }}
    </head>
    <body>
        {{ render(controller('NTFrontendBundle:Frontend:renderHeader', { 'locale': app.request.locale, 'route': app.request.attributes.get('_route'), 'route_params': app.request.attributes.get('_route_params') })) }}

        <div class="container">
            {% block main %}{% endblock %}
            {{ render(controller('NTFrontendBundle:Frontend:renderFooter')) }}
            {{ render(controller('NTSettingsBundle:Settings:render', {'key':'footer_miscellanous'})) }}
            {{ render(controller('NTSettingsBundle:Settings:render', {'key':'ga_code'})) }}
        </div>
        {% block footerCSS %}
            {% block stylesheets %}
                {% stylesheets 'css/*' filter='?uglifycss, cssrewrite' output='generatedCss/*.css' %}
                    <link rel="stylesheet"  type="text/css" href="{{ asset_url }}">
                {% endstylesheets %}
            {% endblock %}

            <link href="/vendor/css/bootstrap.min.css" rel="stylesheet" type="text/css">
            <link href="/vendor/css/font-awesome.min.css" rel="stylesheet" type="text/css">
        {% endblock %}

        {% block footerJS %}
            <script src="/vendor/js/jquery.min.js"></script>
            <script src="/vendor/js/bootstrap.min.js"></script>
            <div id="toTop" class="btn btn-info"><span class="glyphicon glyphicon-chevron-up"></span> най-горе</div>
            <script>
                $(document).ready(function(){
                    $(window).scroll(function () {
                        if ($(this).scrollTop() != 0) {
                            $('#toTop').fadeIn();
                        } else {
                            $('#toTop').fadeOut();
                        }
                    });

                    $('#toTop').click(function(){
                        $("html, body").animate({ scrollTop: 0 }, 600);
                        return false;
                    });
                });
            </script>

            {% block javascripts %}
                {% javascripts 'js/*' filter='?uglifyjs' output='generatedJs/*.js' %}
                <script type="text/javascript" src="{{ asset_url }}"></script>
                {% endjavascripts %}
            {% endblock %}
        {% endblock %}
    </body>
</html>
